{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "newLine": "lf"
  },
  "include": [
    "src",
    "__test__"
  ],
  "exclude": [
    "dist",
    "coverage"
  ]
}
